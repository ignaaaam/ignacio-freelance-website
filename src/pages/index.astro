---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Projects from "../components/Projects.astro";
import Process from "../components/Process.astro";
import Pricing from "../components/Pricing.astro";
import Testimonials from "../components/Testimonials.astro";
import FAQ from "../components/FAQ.astro";
import Contact from "../components/Contact.astro";
import LeadMagnet from "../components/LeadMagnet.astro";
import LeadMagnetForm from "../components/LeadMagnetForm.astro";
import FloatingCTA from "../components/FloatingCTA.astro";
import UrgencyBanner from "../components/UrgencyBanner.astro";

const title = "Desarrollador Web Barcelona | Páginas Web Profesionales para Empresas";
const description =
  "Desarrollador web especialista en Barcelona. Creo páginas web profesionales que convierten para empresas y negocios. SEO local Barcelona, diseño responsive y resultados garantizados. +127 proyectos completados.";
const canonicalUrl = "/";
---

<Layout
  title={title}
  description={description}
  lang="es"
  canonicalUrl={canonicalUrl}
>
  <UrgencyBanner />
  <Header />
  <main>
    <Hero lang="es" />
    <LeadMagnetForm lang="es" />
    <Features />
    <Projects />
    <Process />
    <Pricing />
    <Testimonials />
    <FAQ />
    <Contact />
  </main>
  <footer class="py-8 border-t border-border">
    <div class="container">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-sm text-text-muted">
          © {new Date().getFullYear()} Ignacio Amat. Todos los derechos reservados.
        </div>
        <nav class="flex gap-6">
          <a
            href="/privacidad"
            class="text-sm text-text-muted hover:text-accent transition-colors"
          >
            Política de privacidad
          </a>
          <a
            href="/en/privacy"
            class="text-sm text-text-muted hover:text-accent transition-colors"
          >
            Privacy Policy
          </a>
        </nav>
      </div>
    </div>
  </footer>
  <FloatingCTA />
</Layout>

<style>
  .border-border {
    border-color: var(--color-border);
  }

  .text-text-muted {
    color: var(--color-text-muted);
  }

  .text-accent {
    color: var(--color-accent);
  }
</style>

  description={description}
  lang="en"
  canonicalUrl={canonicalUrl}
>
  <UrgencyBanner lang="en" />
  <Header />
  <main>
    <Hero lang="en" />
    <LeadMagnet lang="en" />
    <Features />
    <Projects />
    <Process />
    <Pricing />
    <Testimonials />
    <FAQ />
    <Contact />
  </main>
  <footer class="py-8 border-t border-border">
    <div class="container">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">

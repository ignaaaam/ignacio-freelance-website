---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getTranslation } from '../../i18n/utils';

const locale = 'en';
const title = getTranslation(locale, 'seo.legal.title');
const description = getTranslation(locale, 'seo.legal.description');
const canonicalUrl = "/en/legal-notice";
---

<Layout 
	title={title} 
	description={description} 
	lang="en"
	canonicalUrl={canonicalUrl}
>
	<Header />
	<main class="py-12 md:py-20">
		<article class="container max-w-4xl mx-auto px-4">
			<header class="mb-12">
				<div class="flex justify-between items-start mb-4">
					<h1 class="text-4xl md:text-5xl font-bold">Legal Notice</h1>
					<a href="/aviso-legal" class="text-sm text-text-muted hover:text-accent transition-colors whitespace-nowrap ml-4">
						Espa√±ol
					</a>
				</div>
				<p class="text-text-muted text-lg">Last updated: {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
			</header>

			<div class="prose prose-lg max-w-none">
				<section class="mb-8">
					<h2 class="text-2xl font-bold mb-4">1. General Information</h2>

---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Contact from '../../components/Contact.astro';

const baseUrl = 'https://ignacioamatweb.com';
const title = 'Web Developer Madrid | Freelance Full-Stack | Ignacio Amat';
const description = 'Freelance web developer for companies in Madrid. Landing pages, business websites, and web applications from EUR800. Remote collaboration and free quote.';
const canonicalUrl = '/en/web-developer-madrid';
const keywords = ['web developer madrid', 'freelance web developer madrid', 'website development madrid', 'business website madrid', 'landing page madrid', 'web design madrid'];

const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': 'Ignacio Amat',
  'jobTitle': 'Freelance Full-Stack Web Developer',
  'url': baseUrl,
  'knowsAbout': ['Web Development', 'SEO', 'E-commerce', 'Frontend Development', 'Backend Development']
};

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  'serviceType': 'Web Development',
  'provider': {
    '@type': 'Person',
    'name': 'Ignacio Amat',
    'url': baseUrl
  },
  'areaServed': {
    '@type': 'City',
    'name': 'Madrid'
  },
  'offers': {
    '@type': 'Offer',
    'priceRange': 'EUR800-EUR6000+'
  }
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  'itemListElement': [
    { '@type': 'ListItem', 'position': 1, 'name': 'Home', 'item': `${baseUrl}/en/` },
    { '@type': 'ListItem', 'position': 2, 'name': 'Web Developer Madrid', 'item': `${baseUrl}${canonicalUrl}` }
  ]
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  'mainEntity': [
    {
      '@type': 'Question',
      'name': 'How much does a freelance web developer cost in Madrid?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'Most projects range from EUR800 to EUR6000+ depending on scope. Landing pages start around EUR800, business websites between EUR1500 and EUR3500, and ecommerce projects from EUR3000.'
      }
    },
    {
      '@type': 'Question',
      'name': 'Do we need to be based in Madrid to work together?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'No. I work 100% remotely with companies in Madrid and across Spain through video calls, email, and project tools.'
      }
    },
    {
      '@type': 'Question',
      'name': 'How long does a web project usually take?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'Landing pages are usually delivered in 2-5 days, business websites in 2-4 weeks, and ecommerce websites in 4-8 weeks.'
      }
    }
  ]
};

const allSchemas = [personSchema, serviceSchema, breadcrumbSchema, faqSchema];

const alternateUrls = {
  es: '/desarrollador-web-madrid',
  en: canonicalUrl
};
---

<Layout
  title={title}
  description={description}
  lang="en"
  canonicalUrl={canonicalUrl}
  keywords={keywords}
  additionalSchemas={allSchemas}
  alternateUrls={alternateUrls}
>
  <Header />
  <main>
    <section class="py-12 sm:py-16 md:py-20">
      <div class="container px-4 sm:px-6">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 sm:mb-6">Freelance Web Developer for Companies in Madrid</h1>

          <p class="text-lg sm:text-xl text-text-muted mb-6 sm:mb-8">
            Need a website that helps your Madrid business generate leads and sales? I build fast,
            SEO-ready websites and web applications focused on real business outcomes.
          </p>

          <div class="flex flex-wrap gap-3 mb-8">
            <a href="#contacto" class="btn-primary">Request Free Quote</a>
            <a href="/en/hire-full-stack-web-developer" class="btn-secondary">Hire Full-Stack Developer</a>
          </div>

          <div class="prose prose-lg max-w-none mb-8 sm:mb-12">
            <h2 class="text-2xl sm:text-3xl font-bold mt-8 mb-4">Web development services for Madrid companies</h2>
            <p class="text-base sm:text-lg mb-4">
              Madrid is one of Spain's most competitive business markets. Your website must load fast,
              communicate trust, and convert visitors into qualified leads. That is exactly how I build.
            </p>

            <div class="grid sm:grid-cols-2 gap-4 sm:gap-6 mb-8">
              <div class="bg-secondary p-4 sm:p-6 rounded-lg">
                <h3 class="text-lg sm:text-xl font-bold mb-2">High-converting Landing Pages</h3>
                <p class="text-sm sm:text-base">Designed for paid campaigns and lead generation from EUR800.</p>
              </div>
              <div class="bg-secondary p-4 sm:p-6 rounded-lg">
                <h3 class="text-lg sm:text-xl font-bold mb-2">Business Websites</h3>
                <p class="text-sm sm:text-base">Professional multi-page websites with strong SEO foundations from EUR1500.</p>
              </div>
              <div class="bg-secondary p-4 sm:p-6 rounded-lg">
                <h3 class="text-lg sm:text-xl font-bold mb-2">Ecommerce Development</h3>
                <p class="text-sm sm:text-base">Online stores with Stripe, Redsys, or Bizum integrations from EUR3000.</p>
              </div>
              <div class="bg-secondary p-4 sm:p-6 rounded-lg">
                <h3 class="text-lg sm:text-xl font-bold mb-2">Custom Web Applications</h3>
                <p class="text-sm sm:text-base">Internal tools, client portals, and SaaS products tailored to your workflow.</p>
              </div>
            </div>

            <h2 class="text-2xl sm:text-3xl font-bold mt-10 mb-4">Why choose a freelance developer for Madrid?</h2>
            <ul class="list-disc pl-5 sm:pl-6 space-y-2 mb-6 text-sm sm:text-base">
              <li><strong>Direct communication:</strong> You speak with the person building your project.</li>
              <li><strong>Lower cost:</strong> Usually 30-50% lower than agencies for similar scope.</li>
              <li><strong>Modern stack:</strong> Astro, React, Next.js, Node.js, and technical SEO.</li>
              <li><strong>Remote delivery:</strong> Efficient process without geography constraints.</li>
            </ul>

            <h2 class="text-2xl sm:text-3xl font-bold mt-10 mb-4">Related services in Spain</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
              <a href="/en/web-developer-spain" class="block p-4 bg-secondary rounded-lg hover:shadow-lg transition-all">
                <h3 class="font-bold mb-1">Web Developer Spain -></h3>
                <p class="text-sm text-text-muted">Nationwide service for any city or town in Spain.</p>
              </a>
              <a href="/en/web-developer-barcelona" class="block p-4 bg-secondary rounded-lg hover:shadow-lg transition-all">
                <h3 class="font-bold mb-1">Web Developer Barcelona -></h3>
                <p class="text-sm text-text-muted">Service page for Barcelona companies.</p>
              </a>
              <a href="/en/web-developer-valencia" class="block p-4 bg-secondary rounded-lg hover:shadow-lg transition-all">
                <h3 class="font-bold mb-1">Web Developer Valencia -></h3>
                <p class="text-sm text-text-muted">Service page for Valencia companies.</p>
              </a>
              <a href="/en/web-developer-sevilla" class="block p-4 bg-secondary rounded-lg hover:shadow-lg transition-all">
                <h3 class="font-bold mb-1">Web Developer Sevilla -></h3>
                <p class="text-sm text-text-muted">Service page for Sevilla companies.</p>
              </a>
              <a href="/en/web-design-businesses" class="block p-4 bg-secondary rounded-lg hover:shadow-lg transition-all">
                <h3 class="font-bold mb-1">Web Design for Businesses -></h3>
                <p class="text-sm text-text-muted">Conversion-focused design and UX for business sites.</p>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <Contact />
  </main>
</Layout>

<style>
  .text-text-muted { color: var(--color-text-muted); }
  .bg-secondary { background-color: var(--color-secondary); }
  .prose h2, .prose h3, .prose h4 { color: var(--color-text); }
  .prose p, .prose li { color: var(--color-text); line-height: 1.8; }
</style>

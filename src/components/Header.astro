---
import Translate from './Translate.astro';

const navItems = [
  { label: 'Servicios', href: '#servicios' },
  { label: 'Precios', href: '#precios' },
  { label: 'FAQ', href: '#faq' },
];

const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');
---

<header class="py-4 sticky top-0 bg-primary/80 backdrop-blur-sm z-50">
  <div class="container flex items-center justify-between">
    <a href={isEnglish ? '/en' : '/'} class="text-xl font-heading font-semibold">Ignacio Amat</a>
    
    <div class="hidden md:flex items-center gap-8">
      <nav class="flex items-center gap-8">
        {navItems.map(item => (
          <a href={item.href} class="text-sm hover:text-accent transition-colors">
            {item.label}
          </a>
        ))}
        
        <div class="flex items-center gap-4">
          <button
            id="theme-toggle"
            class="p-2 rounded-full hover:bg-secondary transition-colors"
            aria-label="Toggle theme"
          >
            <svg class="w-5 h-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
            <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </button>

          <a href="#contacto" class="btn-primary">
            <Translate key="contact.title" />
          </a>
        </div>
      </nav>

      <div class="language-switcher">
        <a href="/" class={!isEnglish ? 'active' : ''}>ES</a>
        <span class="separator">|</span>
        <a href="/en" class={isEnglish ? 'active' : ''}>EN</a>
      </div>
    </div>

    <button class="md:hidden" aria-label="Menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</header>

<style>
  .text-accent {
    color: var(--color-accent);
  }
  
  .font-heading {
    font-family: var(--font-heading);
  }

  .bg-primary\/80 {
    background-color: rgba(var(--color-primary), 0.8);
  }

  .language-switcher {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    background: var(--color-button-bg-secondary);
    padding: 0.5rem;
    border-radius: 0.5rem;
    backdrop-filter: blur(10px);
  }

  .language-switcher a {
    color: var(--color-button-text-secondary);
    text-decoration: none;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .language-switcher a:hover {
    background: var(--color-secondary);
  }

  .language-switcher a.active {
    background: var(--color-accent);
    color: var(--color-button-text);
  }

  .language-switcher .separator {
    color: var(--color-text-muted);
  }
</style>

<script>
  // Mobile menu functionality
  const menuButton = document.querySelector('button[aria-label="Menu"]');
  const nav = document.querySelector('nav');

  menuButton?.addEventListener('click', () => {
    nav?.classList.toggle('hidden');
  });
</script> 
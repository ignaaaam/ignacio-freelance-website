---
import Translate from "./Translate.astro";

const projectTypes = [
  {
    icon: "personal",
    titleKey: "projects.types.personal.title",
    descriptionKey: "projects.types.personal.description",
    features: [
      "projects.types.personal.features.0",
      "projects.types.personal.features.1",
      "projects.types.personal.features.2",
      "projects.types.personal.features.3",
      "projects.types.personal.features.4",
    ],
  },
  {
    icon: "business",
    titleKey: "projects.types.business.title",
    descriptionKey: "projects.types.business.description",
    features: [
      "projects.types.business.features.0",
      "projects.types.business.features.1",
      "projects.types.business.features.2",
      "projects.types.business.features.3",
      "projects.types.business.features.4",
    ],
  },
  {
    icon: "digital",
    titleKey: "projects.types.digital.title",
    descriptionKey: "projects.types.digital.description",
    features: [
      "projects.types.digital.features.0",
      "projects.types.digital.features.1",
      "projects.types.digital.features.2",
      "projects.types.digital.features.3",
      "projects.types.digital.features.4",
    ],
  },
];
---

<section class="py-20 bg-secondary" id="proyectos">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">
        <Translate key="projects.title" />
      </h2>
      <p class="text-text-muted max-w-2xl mx-auto">
        <Translate key="projects.description" />
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        projectTypes.map((project) => (
          <div class="card project-card">
            <div class="project-icon mb-6">
              {project.icon === "personal" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-10 w-10"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              )}
              {project.icon === "business" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-10 w-10"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                  />
                </svg>
              )}
              {project.icon === "digital" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-10 w-10"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                  />
                </svg>
              )}
            </div>
            <div class="card-content">
              <h3 class="text-2xl font-bold mb-4 min-h-[60px]">
                <Translate key={project.titleKey} />
              </h3>
              <p class="text-text-muted mb-8 min-h-[80px]">
                <Translate key={project.descriptionKey} />
              </p>
              <ul class="space-y-3 mb-8 min-h-[200px]">
                {project.features.map((featureKey) => (
                  <li class="flex items-center gap-2">
                    <svg
                      class="h-5 w-5 text-accent flex-shrink-0"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span>
                      <Translate key={featureKey} />
                    </span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="mt-auto flex justify-center">
              <a href="#contacto" class="btn-secondary text-center" onclick="if(typeof window.trackCTAClick === 'function') { window.trackCTAClick('Projects CTA - Discuss Project'); }">
                <Translate key="projects.ctaShort" />
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .project-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: var(--color-card-bg);
  }

  .card-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .project-icon {
    color: var(--color-accent);
  }

  .text-accent {
    color: var(--color-accent);
  }

  .text-text-muted {
    color: var(--color-text-muted);
  }

  /* Card hover effect */
  .project-card {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
  }

  /* --- Fix for iPad/tablet viewport: ensure button is not cut off --- */
  @media (min-width: 768px) and (max-width: 1024px) {
    .project-card {
      padding-bottom: 2.5rem !important;
      overflow: visible !important;
    }
    .project-card .btn-secondary {
      min-height: 48px;
      padding-top: 1rem;
      padding-bottom: 1rem;
      padding-left: 1rem;
      padding-right: 1rem;
      font-size: 1rem;
      white-space: nowrap;
    }
  }

  @media (max-width: 480px) {
    .project-card .btn-secondary {
      font-size: 0.95rem;
      white-space: nowrap;
    }
  }
  @media (min-width: 1025px) {
    .project-card .btn-secondary {
      font-size: 1.1rem;
      white-space: nowrap;
    }
  }
</style>
